{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{# TODO: fix font in registration form#}
<h1 class="text-center">Registracija</h1><br>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">{{ 'registration.submit'|trans }}</button>
    </div>
{{ form_end(form) }}
<div class="row">
    <p>
        Jau esate užsiregsitravę? <a href="{{ path('fos_user_security_login') }}">Prisijunkite</a>
    </p>
</div>
