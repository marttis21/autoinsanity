{% extends 'AppBundle::base.html.twig' %}
{% form_theme searchForm 'bootstrap_3_layout.html.twig' %}

{% block title %}
    {{ 'title.index'|trans() }}
{% endblock %}


{% block jumbotron %}
    <div id="index-container">
        <div class="index-jumbotron-container">
            <div class="jumbotron index-jumbotron-content">
                <div class="container text-center">
                <span>
                    <h1>
                        Visi Lietuvos automobilių skelbimai vienoje vietoje
                    </h1>
                    <h2>
                        Išbandyk, kaip tai patogu
                    </h2>
                </span>
                </div>
            </div>
        </div>
        <div id="index-form-container" class="color-sunyellow-background">
            {{ form_start(searchForm, { attr: {novalidate: 'novalidate'} }) }}
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-offset-3">
                        {{ form_row(searchForm.brand, {'attr': {'class': 'input-lg'}}) }}
                        {{ form_row(searchForm.model, {'attr': {'class': 'input-lg'}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(searchForm.price_from, {'attr': {'class': 'input-lg'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(searchForm.price_to, {'attr': {'class': 'input-lg'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(searchForm.year_from, {'attr': {'class': 'input-lg'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(searchForm.year_to, {'attr': {'class': 'input-lg'}}) }}
                            </div>
                        </div>
                        {{ form_row(searchForm.fuel_type, {'attr': {'class': 'input-lg'}}) }}
                    </div>
                </div>
                <div class="row text-center">
                    <div class="btn btn-default btn-lg">
                        <a href="{{ path("detailed_search") }}">{{ 'form.button.detailed_search'|trans() }}</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">{{ 'form.button.search'|trans() }}</button>
                </div>
            </div>
            {{ form_end(searchForm, {'render_rest': false}) }}
        </div>
    </div>

{% endblock %}

{% block body %}
{% endblock %}

{% block javascripts %}
    {% include('@App/default/search_form.html.twig') %}
{% endblock %}
