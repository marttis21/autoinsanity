{% if app.user and app.user.searches.contains(vehicleSearch) and vehicleSearch.pinned == 1 %}
    <button type="button" class="unpin vehicle-search-pin-button btn btn-default" value="{{ vehicleSearch.id }}">
        <span class="glyphicon glyphicon-heart"></span>
        <b>{{ 'searches.pin.pinned'|trans() }}</b>
    </button>
{% else %}
    <button type="button" class="pin vehicle-search-pin-button btn btn-default" value="{{ vehicleSearch.id }}">
        <span class="glyphicon glyphicon-heart-empty"></span>
        {{ 'searches.pin.unpinned'|trans() }}
    </button>
{% endif %}
